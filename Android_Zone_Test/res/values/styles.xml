<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <style name="AppBaseTheme2" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="PopSelectPicAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/pop_bottom_out</item>
    </style>

    <style name="TvDefault">
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@color/tv_click</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="TvHint" parent="TvDefault">
        <item name="android:background">@color/tv_hint</item>
    </style>

    <style name="TvOnClick" parent="TvDefault">
        <item name="android:onClick">onClick</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>

</resources>