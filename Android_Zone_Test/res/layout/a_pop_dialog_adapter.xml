<?xml version="1.0" encoding="utf-8"?>
<com.zone.view.FlowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/flowLayoutZone1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/pop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:onClick="onClick"
        android:text="pop" />

    <Button
        android:id="@+id/pop_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:onClick="onClick"
        android:text="pop在此按钮之下" />

    <Button
        android:id="@+id/dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:onClick="onClick"
        android:text="dialog" />
    <Button
        android:id="@+id/dialogFullScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:onClick="onClick"
        android:text="全屏dialog" />

    <Button
        android:id="@+id/bt_floatView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:onClick="onClick"
        android:text="悬浮窗开启" />

    <Button
        android:id="@+id/bt_floatViewClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:onClick="onClick"
        android:text="悬浮窗关闭" />

    <Button
        android:id="@+id/bt_floatNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:onClick="onClick"
        android:text="浮动通知" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="#ff0000"
        android:onClick="onClick"
        android:text="pop未完成" />

    <Button
        android:id="@+id/textGaoLiang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="文字点击高亮等效果" />

    <Button
        android:id="@+id/tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="tagBlue" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:tag="blue"
            android:text="tagBlue" />

    </LinearLayout>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="30dp"
        android:layout_height="100dp"
        android:max="100"
        android:progress="40"
        android:progressDrawable="@drawable/progressbar_z_vertical" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:max="100"
        android:progress="40"
        android:progressDrawable="@drawable/progressbar_z_hori"
        android:secondaryProgress="70" />

    <com.zone.view.ZSeekBarUnslide
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:max="100"
        android:thumb="@drawable/thumb"
        android:progress="40"
        android:progressDrawable="@drawable/progressbar_z_hori"
        android:secondaryProgress="70" />

</com.zone.view.FlowLayout>