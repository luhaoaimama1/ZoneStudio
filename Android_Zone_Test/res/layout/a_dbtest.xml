<?xml version="1.0" encoding="utf-8"?>
<com.zone.view.FlowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/flowLayoutZone1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="#00ff00"
        android:text="字段" />
    <TextView
        style="@style/TvOnClick"
        android:id="@+id/db_addColumn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="db添加字段" />

    <TextView
        style="@style/TvOnClick"
        android:id="@+id/db_update_Column"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="db修改字段" />

    <TextView
        style="@style/TvOnClick"
        android:id="@+id/db_queryColumn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="db查询字段" />
    
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="#00ff00"
        android:text="创建修改数据库" />

    <TextView
        style="@style/TvOnClick"
        android:id="@+id/db_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="db创建" />

    <TextView
        style="@style/TvOnClick"
        android:id="@+id/db_Tabledelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="db表删除" />

    <TextView
        style="@style/TvOnClick"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="增加系列" />

    <TextView
        style="@style/TvOnClick"
        android:id="@+id/db_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="addEntity" />
    <TextView
        style="@style/TvOnClick"
        android:id="@+id/db_addOrUpdateEntity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="addOrUpdateEntity" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="#00ff00"
        android:text="修改系列" />

    <TextView
        style="@style/TvOnClick"
        android:id="@+id/db_updateByC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="db修改_条件" />
    <TextView
        style="@style/TvOnClick"
        android:id="@+id/db_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="db修改" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="#00ff00"
        android:text="删除系列" />

    <TextView
        style="@style/TvOnClick"
        android:id="@+id/db_deleteAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="清空表但是表存在(但是 id没从1开始)" />
    <TextView
        style="@style/TvOnClick"
        android:id="@+id/db_deleteByC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="通过条件删除" />
    <TextView
        style="@style/TvOnClick"
        android:id="@+id/db_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除实体" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="#00ff00"
        android:text="查询系列" />

    <TextView
        style="@style/TvOnClick"
        android:id="@+id/db_query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="db查询" />
    <TextView
        style="@style/TvOnClick"
        android:id="@+id/db_queryInner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="db查询内部表" />
    <TextView
        style="@style/TvOnClick"
        android:id="@+id/db_queryByC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="db查询通过条件" />


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="#00ff00"
        android:text="分割线" />

    <TextView
        style="@style/TvOnClick"
        android:id="@+id/tran_add_fail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="db事物增加_失败" />
    <TextView
        style="@style/TvOnClick"
        android:id="@+id/tran_add_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="db事物增加_成功" />

</com.zone.view.FlowLayout>