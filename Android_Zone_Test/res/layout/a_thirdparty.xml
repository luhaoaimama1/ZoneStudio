<?xml version="1.0" encoding="utf-8"?>
<com.zone.view.FlowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/flowLayoutZone1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/google_pull"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:onClick="onClick"
        android:text="google下拉刷新and异步任务" />


    <com.zone.view.FlowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f9ffac">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="下面的是Glide测试"
            android:textColor="#ff4e4e" />

        <Button
            android:id="@+id/bt_glide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:onClick="onClick"
            android:text="Glide学习" />

        <Button
            android:id="@+id/bt_fresco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:onClick="onClick"
            android:text="Fresco学习" />

    </com.zone.view.FlowLayout>

<!--    <Button-->
<!--        android:id="@+id/bt_swtichButton"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_margin="4dp"-->
<!--        android:onClick="onClick"-->
<!--        android:text="水波纹测试" />-->

    <Button
        android:id="@+id/bt_blur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:onClick="onClick"
        android:text="blur" />


    <Button
        android:id="@+id/lifeCycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:onClick="onClick"
        android:text="lifeCycle" />


<!--    https://blog.csdn.net/csdnzouqi/article/details/82592064 -->
<!--    解决水波纹圆角问题 -->
    <view.testing.WaterViewGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:foreground="@drawable/water_ripple"
            android:id="@+id/waterSystem"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="waterSystem" />
    </view.testing.WaterViewGroup>


    <TextView
        style="@style/TvHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="WorkManager研究" />

    <TextView
        android:id="@+id/animal"
        style="@style/TvOnClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Property Animation" />

</com.zone.view.FlowLayout>